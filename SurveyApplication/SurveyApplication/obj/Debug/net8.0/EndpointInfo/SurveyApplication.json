        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Survey/update-response/{responseId}": {
      "put": {
        "tags": [
          "Survey"
        ],
        "parameters": [
          {
            "name": "responseId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
