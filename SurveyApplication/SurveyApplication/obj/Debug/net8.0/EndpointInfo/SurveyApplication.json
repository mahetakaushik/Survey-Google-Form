              "schema": {
                "$ref": "#/components/schemas/Survey"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Survey"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Survey"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
